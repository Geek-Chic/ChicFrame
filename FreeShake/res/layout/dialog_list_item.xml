<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_basic_list_item"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/dialog_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="13.3dip"
        android:layout_marginRight="7dip"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:minHeight="40dip"
        android:orientation="vertical"
        tools:ignore="InefficientWeight" >

        <TextView
            android:id="@+id/dialog_item_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:paddingLeft="13.3dip"
            android:singleLine="true"
            android:textColor="@drawable/bg_dialog_basic_list_selector"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_item_sub_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:paddingLeft="13.3dip"
            android:singleLine="true"
            android:textColor="@drawable/bg_dialog_basic_list_selector"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>