<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_white"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/register_tag_radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/register_tag_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon_tag_first_selector"
            android:button="@null"
            android:clickable="false"
            android:paddingLeft="5dp"
            android:text=" 第一步"
            android:textColor="@color/font_color_white" />

        <RadioButton
            android:id="@+id/register_tag_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon_tag_second_selector"
            android:button="@null"
            android:clickable="false"
            android:text="第二步"
            android:textColor="@color/font_color_white" />

        <RadioButton
            android:id="@+id/register_tag_third"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon_tag_second_selector"
            android:button="@null"
            android:clickable="false"
            android:text="第三步"
            android:textColor="@color/font_color_white" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/register_container_fragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </FrameLayout>

</LinearLayout>