<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:paddingBottom="6.0dip"
        android:paddingTop="6.0dip"
        android:tag="back" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/task_add_sub"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/task_notify"
                android:src="@drawable/icon_task"
                  android:padding="@dimen/margin_medium"
                 />
            
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/task_chart"
                android:src="@drawable/icon_notification"
                android:padding="@dimen/margin_medium"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/proejct_item_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_project_name"
                android:drawablePadding="@dimen/margin_small"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_small"
                android:text="新项目"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_large"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_project_people"
               android:drawablePadding="@dimen/margin_small"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:text="Evil，我是谁"
                android:textColor="@color/font_color_black"
                android:textSize="@dimen/font_size_medium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_project_note"
                  android:drawablePadding="@dimen/margin_small"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_small"
                  android:paddingTop="@dimen/margin_small"
                android:text="说明：这是一个测试项目"
                android:textColor="@color/tast_add_sub_text"
                android:textSize="@dimen/font_size_medium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_project_time"
                  android:drawablePadding="@dimen/margin_small"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_small"
                  android:paddingTop="@dimen/margin_small"
                android:text="时间"
                android:textColor="@color/holo_red"
                android:textSize="@dimen/font_size_large"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>