<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="@drawable/bg_frame_light_bg" >

        <com.widget.roundimageview.RoundedImageView
            android:id="@+id/contact_people_avator"
            android:layout_width="@dimen/avator_medium_size"
            android:layout_height="@dimen/avator_medium_size"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_avator"
            app:border_color="@color/bg_color_white"
            app:border_width="3dip"
            app:corner_radius="100dp"
            app:is_oval="false" />

        <TextView
            android:id="@+id/contact_header_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/contact_people_avator"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_toRightOf="@id/contact_people_avator"
            android:text="蒋鹏"
            android:textColor="@color/font_color_most_black"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_header_nickname"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_toRightOf="@id/contact_people_avator"
            android:text="13163353639"
            android:textColor="@color/font_color_gray"
            android:textSize="@dimen/font_size_large" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_white"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/contact_act_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/icon_profile_selector"
            android:padding="@dimen/margin_small"
            android:text="@string/user_action_profile"
            android:textColor="@color/font_color_most_black"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="match_parent"
            android:background="@color/line_color_light_gray" />

        <Button
            android:id="@+id/contact_act_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/icon_setting_selector"
            android:padding="@dimen/margin_small"
            android:text="设置"
            android:textColor="@color/font_color_most_black"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="match_parent"
            android:background="@color/line_color_light_gray" />

        <Button
            android:id="@+id/contact_act_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/icon_setting_selector"
            android:padding="@dimen/margin_small"
            android:text="设置"
            android:textColor="@color/font_color_most_black"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="match_parent"
            android:background="@color/line_color_light_gray" />

        <Button
            android:id="@+id/contact_act_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/icon_search_selector"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="@string/user_action_search"
            android:textColor="@color/font_color_most_black"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/line_color_light_gray" />

</LinearLayout>