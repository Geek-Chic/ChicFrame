<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_tabbar_indicator_selector"
     >

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_centerInParent="true"
        android:drawablePadding="5dip"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingBottom="3dip"
        android:paddingTop="3dip"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/bg_color_white"
        android:textSize="@dimen/font_size_large"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tab_unread_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/tab_title"
        android:layout_marginTop="5dip"
        android:background="#F00"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small"
        android:textColor="@color/font_color_white"
        android:textSize="@dimen/font_size_small"
        android:visibility="gone" >
    </TextView>

    <View
        android:id="@+id/tab_divider"
        android:layout_width="0.5dip"
        android:layout_height="30dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="3dip"
        android:layout_marginTop="3dip"
        android:background="@color/bg_color_view"
        android:visibility="gone" />

</RelativeLayout>