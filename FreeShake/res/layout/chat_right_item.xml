<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:paddingTop="@dimen/margin_small" >

    <com.widget.roundimageview.RoundedImageView
        android:id="@+id/chat_item_avator_iv"
        android:layout_width="@dimen/avator_small_size"
        android:layout_height="@dimen/avator_small_size"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_avator"
        app:corner_radius="100dp"
        app:is_oval="false" />


        <LinearLayout
            android:id="@+id/chat_item_message_llt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/chat_item_avator_iv"
            android:background="@drawable/icon_chat_balloon_right"
            android:clickable="true"
            android:minHeight="@dimen/avator_medium_size"
            android:orientation="vertical"
            android:padding="@dimen/margin_medium" >

            <TextView
                android:id="@+id/chat_item_sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是谁"
                android:textColor="@color/font_color_white"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/chat_item_message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="smdflaskdflajsdflsakjdflj"
                android:textColor="@color/font_color_white"
                android:textSize="16.0sp" />

            <ProgressBar
                android:id="@+id/chat_item_upload_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="7.0dip"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium"
                android:max="100"
                android:visibility="gone"
                android:progressDrawable="@drawable/chat_progress" />
        </LinearLayout>
            <TextView
        android:id="@+id/chat_item_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/chat_item_message_llt"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/icon_clock"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small"
        android:text="11:654"
        android:textColor="@color/font_color_most_black"
        android:textSize="@dimen/font_size_small"
        android:visibility="visible" />

</RelativeLayout>