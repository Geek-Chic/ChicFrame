<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_menu_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <include layout="@layout/user_header" />

        <com.geekchic.wuyou.ui.main.view.IphoneTreePullToRefreshView
            android:id="@+id/contact_pullrefresh_expandlist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            ptr:ptrHeaderBackground="@android:color/darker_gray"
            ptr:ptrHeaderTextColor="@android:color/white"
            ptr:ptrMode="pullFromStart"
            ptr:ptrScrollingWhileRefreshingEnabled="true" />
    </LinearLayout>

    <com.widget.slidinglayer.SlidingLayer
        android:id="@+id/contact_sliding_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        ptr:stickTo="left"
        ptr:shadow_drawable="true"
        />

</FrameLayout>