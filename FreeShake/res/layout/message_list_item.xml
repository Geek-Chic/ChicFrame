<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/task_add_sub"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/message_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_medium"
        android:background="@drawable/icon_avator" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:layout_margin="@dimen/margin_medium"
        >

        <TextView
            android:id="@+id/message_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新好友通知"
            android:textColor="@color/font_color_most_black" />

        <TextView
            android:id="@+id/message_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx已加加你为好友"
            android:textColor="@color/font_color_most_black" />
    </LinearLayout>
   <TextView 
       android:id="@+id/message_item_level"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:gravity="center"
       android:layout_marginRight="@dimen/margin_medium"
       android:text="重要"
       />
</LinearLayout>