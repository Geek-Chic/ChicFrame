<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:strip="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.geekchic.wuyou.ui.view.PagerSlidingTabStrip
        android:id="@+id/nav_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        strip:dividerColor="@color/bg_color_white"
        strip:tabBackground="@color/bg_color_white"
        strip:dividerPadding="1dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/nav_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity" />

</FrameLayout>