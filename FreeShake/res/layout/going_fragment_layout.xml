<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.geekchic.wuyou.ui.main.view.SwipePullToRefreshView
        android:id="@+id/project_current_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:transcriptMode="normal"
        app:ptrHeaderTextColor="@color/font_color_most_black"
        app:ptrMode="pullFromStart"
        app:ptrScrollingWhileRefreshingEnabled="true"
        app:swipeActionRight="reveal"
        app:swipeBackView="@+id/swipe_project_item_back"
        app:swipeCloseAllItemsWhenMoveList="true"
        app:swipeFrontView="@+id/swipe_project_item_front"
        app:swipeOpenOnLongPress="false"
        app:swipeMode="left"
        app:swipeOffsetLeft="200dip" />

</LinearLayout>