<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_project_item_front"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:background="@color/task_add_sub"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/project_going_timer"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_project_color_gray_blue_selector"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/icon_task" />

            <ImageButton
                android:id="@+id/project_going_notify"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_project_color_darkgray_green_selector"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/icon_notification" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/proejct_going_newname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_project_name"
                android:drawablePadding="@dimen/margin_small"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_small"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/project_going_people"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_project_people"
                android:drawablePadding="@dimen/margin_small"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:textColor="@color/font_color_black"
                android:textSize="@dimen/font_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/project_going_note"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_project_note"
                android:drawablePadding="@dimen/margin_small"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:textColor="@color/font_color_black"
                android:textSize="@dimen/font_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/project_going_timer_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_project_time"
                android:drawablePadding="@dimen/margin_small"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:textColor="@color/font_color_black"
                android:textSize="@dimen/font_size_large"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
